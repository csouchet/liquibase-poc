<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

	<changeSet id="1" author="csouchet" logicalFilePath="1.0.0/add_owner_table.xml">
		<createTable tableName="OWNER">
			<column name="ID" type="java.sql.Types.BIGINT">
				<constraints primaryKey="true" primaryKeyName="PK_OWNER" nullable="false" />
			</column>
			<column name="NAME" type="java.sql.Types.VARCHAR(255)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addUniqueConstraint constraintName="UC_OWNER" tableName="OWNER" columnNames="ID,NAME" />
	</changeSet>

</databaseChangeLog>
